<%= render partial: 'layouts/header/header' %>

<div class="top">
  <div class="l-inner">
    <div class="row">
      <% @articles.each do |article| %>
        <article class="col-md-4 article">
          <div class="card" style="width: 18rem">
            <%# <img src="./img/logo_transparent 1.png" class="card-img-top" alt="samne" /> %>
            <%= image_tag article.image.url, 'card-img-top', alt: 'samne' %>
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= article.title %></h5>
              <p class="card-text">
                <%= article.content %>
              </p>
              <div class="py-2 favo-icon">
                <i class="far fa-heart mx-1"></i><span class="ml-3">1</span>
              </div>
              <a href="#" class="stretched-link"></a>
              <%= link_to article_path(article), class: 'stretched-link' %>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</div>
